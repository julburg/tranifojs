<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Test</title>
    <% include ../partials/head %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" type="text/javascript"></script>

</head>

<body class="container">
<header>
    <% include ../partials/header %>
</header>

<div>
    <div class="container">
        <div class="row">

            <div class="col-lg-4" id="stops">
                <h1>Stops: </h1>
                <div class="list-group">
                    <% stops.forEach((stop) => { %>
                    <div class="list-group-item stopsListItem" id="<%= stop.id %>">
                        <h4 class="list-group-item-heading"><%= stop.name %></h4>
                        <p class="list-group-item-text"><%= stop.distance %></p>
                    </div>
                    <% }) %>
                </div>
            </div>

            <div class="col-lg-4" id="routes">
                <h1>Routes: </h1>
                <div class="list-group">
                    <% for (var route in routes ) { %>
                    <div class="list-group-item routeListItem" id="<%= route %>">
                        <h4 class="list-group-item-text"><%= route %></h4>
                    </div>
                    <% } %>
                </div>
            </div>

            <div id="departureList">
            </div>
        </div>
    </div>
</div>


</div>
<footer>
    <% include ../partials/footer %>
</footer>

<script>
    var stopId = null;
    var routeId = null;

    $(".stopsListItem").on("click", function () {

        $('#stops').find('.active').removeClass('active');
        $(this).addClass('active');

        stopId = $(this).attr('id');

        if (routeId != null) {
            showDepartures();
        }


    })

    $(".routeListItem").on("click", function () {


        routeId = $(this).attr('id');
        $('#routes').find('.active').removeClass('active');
        $(this).addClass('active');

        if (stopId != null) {
            showDepartures();

        }

    })

    function showDepartures() {
        $.ajax({
            type: 'GET',
            url: '/departures/' + stopId + '/' + routeId,
            success: function (result) {
                console.log(result);
                let $departureList = $('#departureList');
                $departureList.html(result);
                if (!$departureList.find('.list-group-item-heading').length) {
                    $departureList.hide();
                } else {
                    $departureList.show();
                }
            }
        });
    }

</script>

</body>
</html>